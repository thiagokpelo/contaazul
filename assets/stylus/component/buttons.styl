.button
  height: 40px
  width: 140px
  border: 0
  border-radius: 5px
  background-color: #c9d3dd
  color: #fff
  font-weight: 600
  cursor: pointer

  &.danger
    background-color: #b62639

  &.success
    background-color: #4aba58

.buttons-group
  display: table
  margin: 30px auto 0
  background-color: #fff

  button
    height: 40px
    width: 40px
    border: 1px solid #c9d3dd
    background-color: transparent
    color: inherit

    &.selected
      position: relative
      border-color: #8bc8f6
      background-color: #d8e9fb!important
      z-index: 10

    &:hover
      background-color: #fffaeb

    &:first-of-type
      border-top-left-radius: 5px;
      border-bottom-left-radius: 5px;

    &:last-of-type
      border-top-right-radius: 5px;
      border-bottom-right-radius: 5px;

    + button
      margin-left: -1px

footer
  button
    + button
      margin-left: 10px
