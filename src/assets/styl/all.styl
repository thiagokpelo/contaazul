body
  background-color: $gray-light
  set-style-font-default($blue-base, 14px, $font-family, $font-thin)

*
  vendorize(box-sizing, border-box)

.container
  width: 960px
  margin: 0 auto
  padding: 0 $space-base

textarea:focus
input:focus
select:focus
a:focus
button:focus
  vendorize(box-shadow, 0 0 0 0)
  outline: 0

a
  color: $blue-vivid

.page-title
  width: 100%
  margin: px-to-rem(20px) 0

  h1
    font-size: px-to-rem(32px)

    + hr
      height: px-to-rem(1px)
      border: 0
      background-color: $gray-base
  
  &.actions
    display: flex
    justify-content: space-between

.hide
  display: none
  opacity: 0

.placeholder
  set-placeholder-style(color, $gray-base)

.border
  border: 1px solid $gray-base

header
  padding: 20px 0
  background-color: #2687e9
  color: #fff

  h1
    a
      text-indent: -99999px
      display: block
      height: 15px
      width: 120px
      background: url('./assets/img/logo.png') no-repeat center
      background-size: 120px auto;

