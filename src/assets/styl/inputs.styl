input
  height: 40px
  width: 100%
  padding-left: 10px
  border: 1px solid #c9d3dd
  border-radius: 5px

  &[type=number]
    -moz-appearance: textfield
    appearance: textfield

    &::-webkit-inner-spin-button
      -webkit-appearance: none

  &::-webkit-input-placeholder
    color: #b1b6bd
    opacity: 1
  &:-moz-placeholder
    color: #b1b6bd
    opacity: 1
  &::-moz-placeholder
    color: #b1b6bd
    opacity: 1
  &:-ms-input-placeholder
    color: #b1b6bd
    opacity: 1
  &::-ms-input-placeholder
    color: #b1b6bd
    opacity: 1

.input
  position: relative
  width: 220px

  .addon
    position: absolute;
    top: 0
    right: 0
    height: 40px;
    padding: 0 12px;
    border: 1px solid #c9d3dd
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    background-color: #f1f4f9
    line-height: 2.8em;

.select
  position: relative

  &:after
    content: ''
    background: transparent url(./assets/img/arrow-down.png) no-repeat
    background-size: 30px;
    width: 30px;
    height: 30px;
    display: block;
    position: absolute;
    right: 10px;
    top: 5px;

  select
    position: relative
    display: block
    height: 40px
    width: 100%
    -webkit-appearance:none
    -moz-appearance:none
    appearance:none
    background: #fff
    border: 1px solid #c9d3dd
    padding: 10px
    border-radius: 5px
    color: #2a6392

/* Base for label styling */
[type="checkbox"]:not(:checked)
[type="checkbox"]:checked
  position: absolute
  left: -9999px

[type="checkbox"]:not(:checked)
[type="checkbox"]:checked
  + label
    position: relative
    padding-left: 1.95em
    cursor: pointer

/* checkbox aspect */
[type="checkbox"]:not(:checked)
[type="checkbox"]:checked
  + label
      &:before
        content: ''
        position: absolute
        left: 0
        top: 2px
        width: 18px
        height: 18px
        border: 1px solid #c9d3dd
        background: #fff
        border-radius: 5px

/* checked mark aspect */
[type="checkbox"]:not(:checked)
[type="checkbox"]:checked
  + label
      &:after
        content: 'âœ”'
        position: absolute
        left: 5px
        font-size: 1.3em
        transition: all .2s

/* checked mark aspect changes */
[type="checkbox"]:not(:checked)
  + label
      &:after
        opacity: 0
        transform: scale(0)

[type="checkbox"]:checked
  + label
      &:after
        opacity: 1
        transform: scale(1)
