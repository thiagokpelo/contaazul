/* Base for label styling */
[type="checkbox"]:not(:checked)
[type="checkbox"]:checked
  position: absolute
  left: -9999px

[type="checkbox"]:not(:checked)
[type="checkbox"]:checked
  + label
    position: relative
    padding-left: 1.95em
    cursor: pointer

/* checkbox aspect */
[type="checkbox"]:not(:checked)
[type="checkbox"]:checked
  + label
      &:before
        content: ''
        position: absolute
        left: 0
        top: 2px
        width: 18px
        height: 18px
        border: 1px solid #c9d3dd
        background: #fff
        border-radius: 5px

/* checked mark aspect */
[type="checkbox"]:not(:checked)
[type="checkbox"]:checked
  + label
      &:after
        content: 'âœ”'
        position: absolute
        left: 5px
        font-size: 1.3em
        transition: all .2s

/* checked mark aspect changes */
[type="checkbox"]:not(:checked)
  + label
      &:after
        opacity: 0
        transform: scale(0)

[type="checkbox"]:checked
  + label
      &:after
        opacity: 1
        transform: scale(1)
